@model IEnumerable<Projekt_ASP.Areas.Identity.Data.ApplicationUser>
@using Microsoft.AspNetCore.Identity
@using Projekt_ASP.Areas.Identity.Data
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Users";

}

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @if (item.IsAdmin == 2)
                    {
                        <a asp-action="UserDetails" asp-route-id="@item.Id">Details</a><a> |</a>
                        <a asp-action="Privileges" asp-route-id="@item.Id">Privileges</a>
                    }
                    else
                    {
                        <a asp-action="UserDetails" asp-route-id="@item.Id">Details</a><a> |</a>
                        <a asp-action="DeleteUser" asp-route-id="@item.Id">Delete</a><a> |</a>
                        <a asp-action="Privileges" asp-route-id="@item.Id">Privileges</a>


                    }
                </td>

            </tr>
        }
    </tbody>
</table>



