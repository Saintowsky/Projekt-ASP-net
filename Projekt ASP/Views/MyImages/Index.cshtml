@model IEnumerable<Projekt_ASP.Models.ImageModel>
@using Microsoft.AspNetCore.Identity
@using Projekt_ASP.Areas.Identity.Data
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "My Images";
}


<h1>Images</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Image
            </th>
            <th>
                Author
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

        <tr>
            @if (item.Author == @UserManager.GetUserName(User))
            {
                <td>

                    @Html.DisplayFor(modelItem => item.Title)

                </td>
            }
            @if (item.Author == @UserManager.GetUserName(User))
            {
        <td>

            <img src="@("~/image/" + item.ImageName)" asp-append-version="true" width="250px" height="250px" />


        </td>
            }
            @if (item.Author == @UserManager.GetUserName(User))
            {
                <td>

                    @Html.DisplayFor(modelItem => item.Author)


                </td>
            }
            @if (item.Author == @UserManager.GetUserName(User))
            {
                <td>
                    <a asp-action="Show" asp-route-id="@item.ImageID">Show</a> |
                    <a asp-action="Details" asp-route-id="@item.ImageID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ImageID">Delete</a>
                </td>
            }
            </tr>
        }
    </tbody>
</table>
